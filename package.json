{
  "name": "@lvce-editor/preload",
  "version": "0.0.0-dev",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc"
  },
  "keywords": [
    "lvce-editor",
    "electron",
    "preload"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lvce-editor/preload.git"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "execa": "^9.5.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
